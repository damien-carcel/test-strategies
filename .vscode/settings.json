{
  "[php]": {
    "editor.defaultFormatter": "junstyle.php-cs-fixer"
  },
  "editor.rulers": [120],
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "php-cs-fixer.config": "/app/demo/.php-cs-fixer.dist.php",
  "php-cs-fixer.executablePath": "/app/demo/vendor/bin/php-cs-fixer",
  "php-cs-fixer.onsave": true,
  "php-cs-fixer.formatHtml": true,
  "yaml.format.singleQuote": true,
  "yaml.schemas": {
    "https://taskfile.dev/schema.json": [
      "taskfiles/demo/database.yaml",
      "taskfiles/demo/dependencies.yaml",
      "taskfiles/demo/run.yaml",
      "taskfiles/demo/tests.yaml",
      "taskfiles/presentation/dependencies.yaml",
      "taskfiles/presentation/run.yaml",
      "taskfiles/presentation/tests.yaml"
    ]
  }
}
